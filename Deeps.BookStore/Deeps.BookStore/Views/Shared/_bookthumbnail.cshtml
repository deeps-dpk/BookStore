@model BookModel
  
<div class="card mb-4 shadow-sm">
    @if (string.IsNullOrEmpty(Model.CoverImageUrl))
    {
        <img src="~/images/Logo.png" class="img-thumbnail">
    }
    else
    {
        <img src="@Model.CoverImageUrl" class="img-thumbnail" />
    }
    @*<img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "~/images/Logo.png": Model.CoverImageUrl)" class="img-thumbnail" />*@

    <div class="card-body">
        <h5 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Title is not Available" : Model.Title)</h5>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description)?"Description is Not Available":Model.Description)</p>
        <div class="d-flex justify-content-between">
            <div class="col-md-4">
                <a asp-route="bookdetailsroute" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-dark">View Details </a>
            </div>
            @*<div class="btn-group">
                    <a asp-route="bookdetailsroute" asp-route-id="@book.Id" asp-fragment="similarbooks" class="btn btn-sm btn-outline-dark">View Details </a>
                </div>*@
            <div class="col-md-4">
                <a asp-route="deletebookroute" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger">Remove Book </a>
            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.Author) ? "Author is not Available" : Model.Author)</small>
        </div>
    </div>
</div>